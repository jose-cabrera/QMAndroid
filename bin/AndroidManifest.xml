            android:name="org.questionairemanager.engine.SelectInterviewer"
            android:configChanges="orientation|keyboardHidden|keyboard|locale"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="org.questionairemanager.engine.QuestionariesActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|locale"
            android:label="@string/title_activity_questionaries"
            android:windowSoftInputMode="stateHidden" >
        </activity>
