<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.questionairemanager.engine"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoTitleBar" >
        <activity
            android:name="org.questionairemanager.engine.MainActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:label="@string/app_name" 
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.questionairemanager.engine.SubjectActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:label="@string/title_activity_subject" 
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="org.questionairemanager.engine.AddSubjectActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:label="@string/title_activity_add_subject" 
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="org.questionairemanager.engine.EditSubjectActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:label="@string/title_activity_edit_subject" 
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="org.questionairemanager.engine.QuestionsActivity"
            android:configChanges="orientation|keyboardHidden|keyboard"
            android:label="@string/title_activity_questions" 
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="org.questionairemanager.engine.GPSActivity"
            android:label="@string/title_activity_gps"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="org.questionairemanager.engine.TimerActivity"
            android:label="@string/title_activity_timer"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="org.questionairemanager.engine.Afda"
            android:label="@string/title_activity_afda"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>
